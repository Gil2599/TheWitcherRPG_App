<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WitcherDD" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <item name="buttonTint">#2B2A2A</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/blueish_gray</item>
        <item name="colorOnSecondary">@color/red</item>
        <item name="colorAccent">@color/gray</item>
        <item name="textFillColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="fontFamily">@font/witcher_font</item>
        <item name="colorOnPrimaryContainer">@color/purple_200</item>
        <item name="colorOnSecondaryContainer">@color/green</item>
        <item name="colorContainer">@color/light_red</item>
        <item name="colorError">@color/disabledText</item>
        <item name="colorOnError">@color/relic</item>



        <item name="android:textColor">@color/white</item>
    </style>

</resources>