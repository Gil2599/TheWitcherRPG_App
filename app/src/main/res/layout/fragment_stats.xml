            android:gravity="center"
            android:inputType="textPersonName"
            android:text='@{"BODY: " + sharedViewModel.body}'
            android:textStyle="bold"
            android:textSize="21sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextSPD"
