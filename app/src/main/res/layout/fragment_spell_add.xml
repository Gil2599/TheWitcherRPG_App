<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".characterSheet.magic.SpellAddFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/allSpellsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="All Spells"
                android:textColor="@color/purple_200"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/purple_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/allSpellsText"
                app:layout_constraintWidth_percent="0.9" />

            <TextView
                android:id="@+id/textNovice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Novice Spells"
                android:textColor="@color/purple_200"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/view1" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/purple_200"
                app:layout_constraintStart_toStartOf="@+id/textNovice"
                app:layout_constraintTop_toBottomOf="@+id/textNovice"
                app:layout_constraintWidth_percent="0.9" />

            <RelativeLayout
                android:id="@+id/relativeLayoutNovice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNovice" >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewNovice"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textJourneyman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Journeyman Spells"
                android:textColor="@color/purple_200"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textNovice"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayoutNovice" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/purple_200"
                app:layout_constraintStart_toStartOf="@+id/textNovice"
                app:layout_constraintTop_toBottomOf="@+id/textJourneyman"
                app:layout_constraintWidth_percent="0.9" />

            <RelativeLayout
                android:id="@+id/relativeLayoutJourneyman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewJourneyman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>