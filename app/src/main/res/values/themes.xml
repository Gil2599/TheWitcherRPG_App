<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WitcherDD" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->

        <item name="colorPrimary">#004A83</item>
        <item name="colorPrimaryVariant">@color/gray_400</item>
        <item name="colorOnPrimary">#AEC6D8</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkBlue</item>
        <item name="colorSecondaryVariant">@color/blueish_gray</item>
        <item name="colorOnSecondary">@color/darkBlue</item>
        <item name="colorAccent">@color/blueish_gray</item>
        <item name="textFillColor">@color/dark_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="fontFamily">@font/witcher_font</item>

        <item name="actionBarTheme">@style/MyActionBar</item>

        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">#fff</item>
    </style>

</resources>